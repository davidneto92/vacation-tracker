<!-- Start Top Bar -->
<div class="top-bar">
  <div class="top-bar-left">
    <ul class="menu">
      <li><%= link_to "Vacation Tracker", root_path, class: "menu-text" %></li>
      <li><%= link_to "Parks", parks_path %></li>
      <li><%= link_to "Vacations", vacations_path %></li>
      <li><%= link_to "Trip Generator", generator_path %></li>
    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
      <% if current_user %>
        <li>Signed in as <strong><%= current_user.name %></strong>!<li>
        <li><%= link_to "My Account", user_path(current_user) %></li>
        <li><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
      <% else %>
        <li><%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %></li>
      <% end %>
    </ul>
  </div>
</div>
<!-- End Top Bar -->
